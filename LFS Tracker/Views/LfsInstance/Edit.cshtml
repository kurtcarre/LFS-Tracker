@model LFS_Tracker.Models.LfsInstance

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>LFS Instance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="InstanceName" class="control-label"></label>
                <input asp-for="InstanceName" class="form-control" />
                <span asp-validation-for="InstanceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Version" class="control-label"></label>
                <input asp-for="Version" class="form-control" />
                <span asp-validation-for="Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LfsVersion" class="control-label"></label>
                <input asp-for="LfsVersion" class="form-control" />
                <span asp-validation-for="LfsVersion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Installed packages:</label>
                <br />
                @foreach(var package in Model.InstalledPackages)
                {
                    <label class="control-label">@package.PackageName</label>
                    <br />
                }
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
