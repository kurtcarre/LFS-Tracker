@model IEnumerable<LFS_Tracker.Models.Package>

@{
    ViewData["Title"] = "Index";
}

<h1>Packages</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PackageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LfsVersion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCoreLfsPackage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PackageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LfsVersion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCoreLfsPackage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PackageId" class="btn btn-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.PackageId" class="btn btn-primary">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.PackageId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
